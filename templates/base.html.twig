<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title> Supper Agence - {% block title %}{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('assets/css/carousel.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css') }}">
    {% block stylesheets %}{% endblock %}
</head>
<body>

{% include 'layouts/header.html.twig' %}
{# read and display several types of flash messages #}
{% for label, messages in app.flashes %}
    <div class="container mt-4" >
        <div class="alert alert-{{ label}}">
            {% for message in messages %}
                {{ message | raw }}
            {% endfor %}
        </div>
    </div>
{% endfor %}

    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
        }

        @media (min-width: 768px) {
            .bd-placeholder-img-lg {
                font-size: 3.5rem;
            }
        }
        ul li  :hover{

            color: #bef264 !important;
        }
    </style>
    <main role="main">

        {% if block ('carousel') is defined %}
            <main role="main">
                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        {% for key, header in headers %}
                            <li data-target="#myCarousel" data-slide-to="{{ key }}" {% if key == 0 %} class="active" {%
                                endif %}></li>
                        {% endfor %}

                    </ol>
                    <div class="carousel-inner">
                        {% for key, header in headers %}
                        <div class="carousel-item  {% if key == 0 %} active {% endif %}
                          " style="background: url('uploads/images/headers/{{ header.image}}');
                                    background-size: cover ;">

                                <div class="container">
                                    <div class="carousel-caption text-left" style="color: #1a1e21!important; " >
                                        {# <h1 class="text-secondary">{{ header.title | raw }}</h1>
                                        <p class="text-secondary">{{ header.content | raw}}.</p>#}
                                        <p><a class="btn btn-secondary btn-sm" href="{{ header.btnUrl }}"
                                              role="button">{{ header.btnTitle }}</a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </main>

        {% endif %}

        <div class="container marketing   {% if block('carousel') is not defined  %} mt-5 {% endif %}">
            {% block body %}

            {% endblock %}

        </div><!-- /.container -->

        <!-- FOOTER -->

        {% block footer %}
            <div class="bg-dark text-white text-center center fixed-bottom">
                <p class="float-right btn btn-danger mr-2 mt-2"><a href="{{ path('app_home') }}">Back to top</a></p>
                {% set fcbk = 'https://www.facebook.com/photo.php?fbid=2771453106273856&set=a.327391027346755&type=3&theater' %}
                <p class="mt-2">&copy; Copyright 2017 ~ {{ "now"|date('Y', timezone="Europe/Paris") }} développé par <a class="text-white " href="{{fcbk}}">Ismael SACKO</a>
                </p>
            </div>
        {% endblock %}

    </main>


<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="{{ asset('assets/js/bootstrap.bundle.js') }}"></script>
<script src="https://kit.fontawesome.com/589fbbd582.js" crossorigin="anonymous"></script>

<script>

    $(document).ready(  () => {
        $('#myTable').DataTable();
    } );
</script>
</body>
</html>

